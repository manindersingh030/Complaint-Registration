<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pawan.complaintregistration.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#fcf4c8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Login"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="clkLogin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Report Your Complaint :-"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture"
        android:id="@+id/button"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView2"
        android:background="#e59950"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"
        android:onClick="clickPic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageButton"
        android:onClick="clkHelp"
        android:src="@drawable/help"
        android:background="#fcf4c8"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="#e59950"
        android:id="@+id/spinner"
        android:entries="@array/city_arrays"
        android:spinnerMode="dropdown"
        android:focusable="false"
        android:dropDownWidth="match_parent"
        android:textAlignment="center"
        android:minHeight="50dp"
        android:focusableInTouchMode="false"
        android:touchscreenBlocksFocus="true"
        android:layout_marginTop="25dp"
        android:contextClickable="true"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select City :-"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/selectpic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Picture"
        android:id="@+id/selectpic"
        android:textSize="25dp"
        android:background="#e59950"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_marginTop="45dp"
        android:nestedScrollingEnabled="false"
        android:onClick="selectPic"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />
</RelativeLayout>
